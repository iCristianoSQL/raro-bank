<h1>Turmas</h1>

<table class="table-container mx-6">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= link_to classroom.name, classroom_path(classroom) %></td>
        <td>
          <%= link_to "Editar", edit_classroom_path(classroom), class: "bg-pink-500 text-white py-2 px-4 rounded-md shadow-md hover:bg-pink-600" %>
          <%= link_to "Excluir", classroom_path(classroom), method: :delete, data: { confirm: "Tem certeza que deseja excluir esta turma?" }, class: "bg-pink-500 text-white py-2 px-4 rounded-md shadow-md hover:bg-pink-600 ml-2" %>
          <%= link_to "Ver Alunos Associados", classroom_path(classroom), class: "bg-pink-500 text-white py-2 px-4 rounded-md shadow-md hover:bg-pink-600 ml-2" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div style="text-align: right; margin-top: 30px; margin-right: 65px;">
  <%= link_to "Criar Nova Turma", new_classroom_path, class: "bg-pink-500 text-white py-2 px-4 rounded-md shadow-md hover:bg-pink-600" %>
   <%= link_to "Adicionar aluno à turma", classroom_management_path, class: "bg-pink-500 text-white py-2 px-4 rounded-md shadow-md hover:bg-pink-600 mr-2" %>
</div>
