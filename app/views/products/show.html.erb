<section class="flex flex-col gap-2 relative">
  <div class="bg-[#640F46] relative flex items-center px-4 py-6 rounded-[0.5rem] justify-between">
    <img src="<%= @product.image_url %>" class="w-20" alt="Image Product">
    <div class="text-sm">
    <% if @product.premium? %>
        <img src="https://i.ibb.co/Wpr4kDx/selo.png" alt="Product Image" class='top-[-10px] right-[-15px] w-[2.5rem] absolute'>
    <% end %>
      <p class="text-center">Produto</p>
      <%= @product.name %>
    </div>
    <div class="text-sm text-center">
      <p>Inicio do investimento</p>
      <%= @product.start_date.strftime("%d/%m/%Y") %>
    </div>
    <div class="text-sm text-center">
      <p>Fim do investimento</p>
      <%= @product.end_of_term.strftime("%d/%m/%Y") %>
    </div>
    <div class="text-sm text-center">
      <p>Taxa a.a</p>
      <div class="flex flex-col">
        <%= (@product.additional_fee + @product.fee.value * 365).round(2) %>% <%= @product.fee.name %> + <%= @product.additional_fee %>
      </div>
    </div>
    <div class='text-sm text-center'>
        <% if @product.premium? %>
            <div class='w-[1rem] h-[1rem] bg-green-600 rounded-full active-anim'></div>
        <% else %>
            <div class='w-[1rem] h-[1rem] bg-gray-600 rounded-full active-anim'></div>
    <% end %>
</div>
  </div>
</section>
<div class="flex justify-center mt-[2rem] items-center">
  <%= button_to product_path(@product), method: :delete, data: { confirm: 'Tem certeza que deseja excluir o produto?' }, class: 'text-black font-bold flex flex-col items-center' do %>
    <img src="https://i.ibb.co/JsCnZ8z/vender-investimento.png" class="w-[5rem] right-[10px] bottom-[5px] cursor-pointer" alt="Sell Image">
    CONFIRMAR EXCLUS√ÉO
  <% end %>
</div>