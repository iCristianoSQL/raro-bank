<div style="text-align: center; margin-top: 30px; background-color: #F8F8F8; border-radius: 5px; padding: 20px; box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.3); margin-bottom: 20px; margin-left: 100px; margin-right: 100px;">
  <h1 style="color: #DA1B6E; margin-bottom: 40px; font-size: 36px; font-family: 'Arial', sans-serif; text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);">
    Confirmação de Transferência
  </h1>

  <div style="text-align: left; margin: 0 auto; width: 500px;">
      <%= render 'shared/flash_messages' %>

    <table style="width: 100%; border-collapse: separate; border-spacing: 0 10px;">
      <tr>
        <td style="border-radius: 5px; background-color: #DA1B6E; padding: 10px;">
          <h4 style="color: white; margin-bottom: 5px; font-size: 16px;">Remetente:</h4>
          <p style="color: white;"><%= @transfer.sender.name %></p>
        </td>
      </tr>
      <tr>
        <td style="border-radius: 5px; background-color: #DA1B6E; padding: 10px;">
          <h4 style="color: white; margin-bottom: 5px; font-size: 16px;">Destinatário:</h4>
          <p style="color: white;"><%= @transfer.receiver.name %></p>
        </td>
      </tr>
      <tr>
        <td style="border-radius: 5px; background-color: #DA1B6E; padding: 10px;">
          <h4 style="color: white; margin-bottom: 5px; font-size: 16px;">Valor:</h4>
          <p style="color: white;"><%= number_to_currency(@transfer.amount) %></p>
        </td>
      </tr>
    </table>

    <%= form_tag(confirmation_transfers_path, method: :get, enforce_utf8: false) do |form| %>
      <div style="display: flex; align-items: center; justify-content: center; margin-top: 30px;">
        <div style="flex: 1; text-align: center;">
          <h4 style="color: black; margin-bottom: 5px; font-size: 16px;">Token de confirmação</h4>
          <%= text_field_tag :token, nil, style: "border-radius: 5px; box-shadow: 2px 2px 5px hotpink; color: black;" %>
        </div>
        <div style="flex: 1; text-align: center;">
          <%= render 'shared/components/button', styles: 'bg-[#DA1B6E] py-2 px-4' do %>
            <%= submit_tag "Confirmar Transferência" %>
          <% end %>
        </div>
      </div>
    <% end %>


    <div style="text-align: center; margin-top: 30px;">
      <%= link_to "Voltar para a lista de transferências", new_transfer_path, style: "color: #DA1B6E; font-size: 16px; text-decoration: none; display: inline-block; padding: 8px 16px; border-radius: 5px; background-color: #EEE; box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);" %>
    </div>
  </div>
</div>
